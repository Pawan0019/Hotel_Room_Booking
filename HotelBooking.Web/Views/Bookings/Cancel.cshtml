@model HotelBooking.Web.ViewModels.BookingCancelViewModel

@{
    ViewData["Title"] = "Cancel Booking";
}

<style>
    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin-bottom: 1.5rem;
    }
    .modern-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        background: white;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    .card-header-custom {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
        padding: 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .card-body-custom {
        padding: 2rem;
    }
    .warning-box {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 4px;
    }
    .warning-box h5 {
        color: #856404;
        margin: 0 0 0.5rem 0;
        font-weight: 600;
    }
    .warning-box p {
        color: #856404;
        margin: 0;
    }
    .detail-row {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #f1f3f5;
    }
    .detail-row:last-child {
        border-bottom: none;
    }
    .detail-label {
        font-weight: 600;
        color: #495057;
        width: 200px;
        flex-shrink: 0;
    }
    .detail-value {
        color: #212529;
        flex-grow: 1;
    }
    .btn-custom-danger {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }
    .btn-custom-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(250, 112, 154, 0.3);
    }
    .btn-custom-secondary {
        background: #6c757d;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }
    .btn-custom-secondary:hover {
        background: #5a6268;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
    }
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }
</style>

<h1 class="page-header">Cancel Booking</h1>

<div class="modern-card">
    <div class="card-header-custom">
        <i class="fas fa-ban me-2"></i> Confirm Cancellation
    </div>
    <div class="card-body-custom">
        <div class="warning-box">
            <h5><i class="fas fa-exclamation-triangle me-2"></i> Warning</h5>
            <p>Are you sure you want to cancel this booking? This action cannot be undone.</p>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-door-open me-2"></i> @Html.DisplayNameFor(model => model.RoomNumber)
            </div>
            <div class="detail-value">
                <strong>@Html.DisplayFor(model => model.RoomNumber)</strong>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.GuestName)
            </div>
            <div class="detail-value">
                @Html.DisplayFor(model => model.GuestName)
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-calendar-check me-2"></i> @Html.DisplayNameFor(model => model.CheckInDate)
            </div>
            <div class="detail-value">
                @Html.DisplayFor(model => model.CheckInDate)
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-calendar-times me-2"></i> @Html.DisplayNameFor(model => model.CheckOutDate)
            </div>
            <div class="detail-value">
                @Html.DisplayFor(model => model.CheckOutDate)
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-dollar-sign me-2"></i> @Html.DisplayNameFor(model => model.TotalAmount)
            </div>
            <div class="detail-value">
                <strong>$@Html.DisplayFor(model => model.TotalAmount)</strong>
            </div>
        </div>

        <form asp-action="Cancel">
            <input type="hidden" asp-for="BookingId" />
            <div class="action-buttons">
                <button type="submit" class="btn btn-custom-danger">
                    <i class="fas fa-ban me-2"></i> Cancel Booking
                </button>
                <a asp-action="Index" class="btn-custom-secondary">
                    <i class="fas fa-times me-2"></i> Go Back
                </a>
            </div>
        </form>
    </div>
</div>
