@model IEnumerable<HotelBooking.Web.ViewModels.RoomListViewModel>

@{
    ViewData["Title"] = "Rooms";
}

<style>
    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin-bottom: 1.5rem;
    }
    .modern-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        background: white;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 1.5rem;
        background: #fff;
        border-bottom: 1px solid #eee;
    }
    .search-group {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
    .table-container {
        padding: 0;
    }
    .table thead th {
        background: #f8f9fa;
        color: #495057;
        font-weight: 600;
        border-bottom: 2px solid #e9ecef;
        padding: 1rem;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
        color: #212529;
        border-bottom: 1px solid #f1f3f5;
    }
    .table tbody tr:last-child td {
        border-bottom: none;
    }
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.001); /* Subtle lift */
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }
    .status-badge {
        padding: 0.35em 0.8em;
        border-radius: 50rem;
        font-size: 0.75em;
        font-weight: 600;
    }
    .status-available {
        background-color: #d1e7dd;
        color: #0f5132;
    }
    .status-booked {
        background-color: #f8d7da;
        color: #842029;
    }
    .action-btn {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        color: #6c757d;
        transition: all 0.2s;
        text-decoration: none;
    }
    .action-btn:hover {
        background-color: #e9ecef;
        color: var(--primary-color);
    }
    .action-btn.delete:hover {
        background-color: #fee2e2;
        color: #dc3545;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 page-header mb-0">Manage Rooms</h1>
            <p class="text-muted small mb-0">Overview and management of hotel inventory</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Room
        </a>
    </div>

    <div class="modern-card">
        <!-- Toolbar & Filter -->
        <div class="toolbar-container">
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-outline-secondary @(string.IsNullOrEmpty(ViewData["CurrentSort"] as string) && string.IsNullOrEmpty(ViewData["CurrentFilter"] as string) ? "active" : "")">All Rooms</a>
                <a asp-action="Available" class="btn btn-outline-success">Available Only</a>
            </div>
            
            <form asp-action="Index" method="get" class="search-group flex-grow-1 justify-content-end">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Search Room Number..." value="@ViewData["CurrentFilter"]" />
                </div>
                
                <div class="input-group" style="max-width: 200px;">
                     <input type="text" name="roomType" class="form-control" placeholder="Type..." value="@ViewData["TypeFilter"]" />
                </div>
                
                <select name="sortOrder" onchange="this.form.submit()" class="form-select" style="max-width: 180px;">
                    <!option value="" @(ViewData["CurrentSort"] == null ? "selected" : "")>Sort by...</!option>
                    <!option value="price_asc" @(ViewData["CurrentSort"] as string == "price_asc" ? "selected" : "")>Price: Low to High</!option>
                    <!option value="price_desc" @(ViewData["CurrentSort"] as string == "price_desc" ? "selected" : "")>Price: High to Low</!option>
                </select>
                
                <button type="submit" class="btn btn-secondary">Filter</button>
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive table-container">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">@Html.DisplayNameFor(model => model.RoomNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.RoomType)</th>
                        <th>@Html.DisplayNameFor(model => model.PricePerNight)</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">
                                #@Html.DisplayFor(modelItem => item.RoomNumber)
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    <i class="fas fa-bed me-1 text-muted"></i> @Html.DisplayFor(modelItem => item.RoomType)
                                </span>
                            </td>
                            <td class="fw-bold">
                                @Html.DisplayFor(modelItem => item.PricePerNight)
                            </td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <span class="status-badge status-available">
                                        <i class="fas fa-check-circle me-1"></i>Available
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-booked">
                                        <i class="fas fa-times-circle me-1"></i>Blocked
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.RoomId" class="action-btn" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoomId" class="action-btn" title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoomId" class="action-btn delete" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
